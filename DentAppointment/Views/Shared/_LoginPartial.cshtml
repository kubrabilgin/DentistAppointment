@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" href="/Profile/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
           <a href="/Account/Logout" class="nav-link text-dark">Logout</a>
        </form>
    </li>
}
else
{
<li class="nav-item">
    <a class="nav-link text-dark"  href="/Account/Register">Register</a>
</li>
<li class="nav-item">
    @*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>*@
    <a class="nav-link text-dark" href="/Account/Login">Login</a>
</li>
}
</ul>
