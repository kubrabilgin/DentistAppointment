@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register to Appointment System </h1>
<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="UserName">User Name</label>
                <span class="text-danger" asp-validation-for="UserName"></span>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                 <span class="text-danger"  asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Surname">Surname</label>
                 <span class="text-danger"  asp-validation-for="Surname"></span>
                <input asp-for="Surname" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <span class="text-danger"  asp-validation-for="Email"></span>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Color">Color</label>
                <span class="text-danger"  asp-validation-for="Color"></span>
                <input asp-for="Color" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <span class="text-danger" asp-validation-for="Password"></span>
                <input asp-for="Password" class="form-control">
            </div>

            <div class="form-group form-check">
                <input asp-for="IsDentist" type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" asp-for="IsDentist"></label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-4">

    </div>
</div>

